{
  "manifest_version": 3,
  "name": "Productivity Time Tracker",
  "version": "1.0",
  "description": "Tracks time spent on websites and provides productivity analytics.",
  
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications" 
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "options_page": "dashboard.html"
  ,
  "web_accessible_resources": [
    {
      "resources": ["chart.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
  